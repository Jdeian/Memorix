<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/create_scroll"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/createBg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-1dp"
        android:gravity="center|bottom"
        android:background="#60000000">
    <LinearLayout
        android:id="@+id/createNest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/create_layout_bg"
        android:backgroundTint="@color/black"
        android:layout_marginTop="590dp"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/rounded_rec" />

        <TextView
            android:id="@+id/textview23423"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat"
            android:layout_marginLeft="-120dp"
            android:text="Craft smart!"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/create_study_guide"
            android:layout_width="352dp"
            android:layout_height="50dp"
            android:background="@drawable/radiusborder"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/books_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/studyguide_icon" />

            <TextView
                android:id="@+id/textview9323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/redhat"
                android:gravity="center"
                android:text="Create your"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textview2343"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/redhat"
                android:gravity="center"
                android:text="own"
                android:textColor="@color/bluegreen"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textview233234"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/redhat"
                android:gravity="center"
                android:text="study guide"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/create_notes"
            android:layout_width="352dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/radiusborder"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/note_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/create_notes" />

            <TextView
                android:id="@+id/textview39203"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:fontFamily="@font/redhat"
                android:gravity="center"
                android:text="Take"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textview22344"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/redhat"
                android:gravity="center"
                android:text="notes"
                android:textColor="@color/bluegreen"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textview22348"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:fontFamily="@font/redhat"
                android:gravity="center"
                android:text="!"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/create_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            app:srcCompat="@drawable/create_class_lock" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>