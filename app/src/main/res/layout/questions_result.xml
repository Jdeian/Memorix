<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/questionnaire_bg"
        android:layout_marginTop="20dp"
        android:backgroundTint="#131313"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="25dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="600"
        android:fontFamily="@font/redhat"
        android:text="1."
        android:textColor="#c4c4c4"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="209dp" />

        <ImageView
            android:id="@+id/checker_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/check_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/result_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat"
        android:text="Question"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="209dp" />

    <TextView
        android:id="@+id/result_choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat"
        android:text="Choice 1"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/questions_bg"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="209dp" />

    <TextView
        android:id="@+id/result_choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat"
        android:text="Choice 2"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/questions_bg"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="209dp" />


    <TextView
        android:id="@+id/result_choice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat"
        android:text="Choice 3"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/questions_bg"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="209dp" />


    <TextView
        android:id="@+id/result_choice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat"
        android:text="Choice 4"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/questions_bg"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="209dp" />
    </LinearLayout>

</LinearLayout>