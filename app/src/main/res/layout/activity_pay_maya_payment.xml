<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".PayMayaPayment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="174dp"
        android:layout_height="55dp"
        android:layout_gravity="top|left"
        android:layout_marginStart="2dp"
        android:layout_marginTop="7dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/memorix_logo" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:id="@+id/indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="center">

        <View
            android:id="@+id/circle1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_indicator" />

        <View
            android:id="@+id/circle2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_indicator" />

        <View
            android:id="@+id/circle3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_indicator" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/payment_btn_bg"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/go_to_payment_form"
            android:layout_width="350dp"
            android:layout_height="53dp"
            android:background="@drawable/gray_border"
            android:backgroundTint="#343434"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:paddingRight="90dp"
                android:layout_gravity="center"
                android:fontFamily="@font/redhat"
                android:gravity="center"
                android:text="Upload Here!"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/redhat"
                android:gravity="center"
                android:text=">"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="19sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-185dp"
        app:srcCompat="@drawable/upload_img" />

</LinearLayout>