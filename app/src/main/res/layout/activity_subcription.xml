<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Subcription">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/payment_green_blood" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-160dp"
            app:srcCompat="@drawable/subcription_back_icon" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/redhat"
        android:text="Upgrade Plan"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/redhat"
        android:text="Choose a subscription to unlock the functionality of the"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat"
        android:text="application."
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/basic_plan"
        android:layout_width="355dp"
        android:layout_height="86dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/questionnaire_bg"
        android:backgroundTint="@color/bluegreen"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhat"
            android:textFontWeight="600"
            android:gravity="center"
            android:text="Monthly plan"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-135dp"
            android:layout_marginTop="-20dp"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat"
            android:layout_gravity="center"
            android:text="₱"
            android:layout_marginTop="-6dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat"
            android:layout_gravity="center"
            android:text="150"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview213"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat"
            android:layout_gravity="left"
            android:text="Full access for 30 days"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-20dp"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yearly_plan"
        android:layout_width="355dp"
        android:layout_height="86dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/questionnaire_bg"
        android:backgroundTint="#262626"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/redhat"
            android:gravity="center"
            android:text="Yearly plan"
            android:layout_gravity="left"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-135dp"
            android:layout_marginTop="-20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/redhat"
                android:layout_gravity="center"
                android:text="₱"
                android:layout_marginTop="-6dp"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/redhat"
                android:layout_gravity="center"
                android:text="999"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat"
            android:layout_gravity="left"
            android:text="Full access for 365 days"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-20dp"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat"
        android:layout_gravity="center"
        android:text="Memorix"
        android:layout_marginRight="3dp"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat"
        android:layout_gravity="center"
        android:text="Pro"
        android:textColor="@color/bluegreen"
        android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/payment_btn_bg"
        android:gravity="center">
    <LinearLayout
        android:id="@+id/continue_btn"
        android:layout_width="350dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gray_border"
        android:backgroundTint="@color/bluegreen"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:paddingRight="120dp"
            android:fontFamily="@font/redhat"
            android:gravity="center"
            android:text="Continue"
            android:textFontWeight="700"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat"
            android:gravity="center"
            android:text=">"
            android:textFontWeight="700"
            android:textColor="@color/black"
            android:textSize="19sp" />
    </LinearLayout>
    </RelativeLayout>

</LinearLayout>