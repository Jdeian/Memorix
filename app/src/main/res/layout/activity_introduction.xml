<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intorduction_bg"
    android:orientation="vertical"
    tools:context=".Introduction">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/circle1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_indicator" />

        <View
            android:id="@+id/circle2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_indicator" />

        <View
            android:id="@+id/circle3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_indicator" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textview2123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat"
        android:text="WELCOME TO"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textview213"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/redhat"
        android:text="MEMORIX"
        android:textColor="@color/bluegreen"
        android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/asddsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview23543"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat"
            android:text="Create your"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textview4313"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/redhat"
            android:text="own"
            android:textColor="@color/bluegreen"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textview2343"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/redhat"
            android:text="questionnaires, flashcards, notes, and classes"
            android:textColor="@color/white"
            android:textSize="13dp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/bluegreen"
        app:cornerRadius="10dp"
        android:fontFamily="@font/redhat"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="345dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/studyguide_features_bg"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview213243"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="33dp"
            android:layout_height="37dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/bluegreen"/>
    </RelativeLayout>


</LinearLayout>